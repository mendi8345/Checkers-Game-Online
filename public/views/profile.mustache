                    <div class="data">
                        <h4>number of games</h4>
                        <p>{{numOfGames}}</p>
                    </div>
                </div>
            </div>

            <div class="projects">
                <h3></h3>
                <div class="projects_data">
                    <div class="data">
                        <h4>number of wins</h4>
                        <p>{{numOfWins}}</p>
                    </div>
                    <div class="data">
                        <h4>number of losses</h4>
                        <p>{{numOfLosses}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>




